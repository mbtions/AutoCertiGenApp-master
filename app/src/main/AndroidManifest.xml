<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.autocertigen">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name="com.example.autocertigen.App"
        android:theme="@style/Theme.AutoGenerateCertificates">
        <activity android:name="com.example.autocertigen.AdditionalInfo"></activity>
        <activity android:name="com.example.autocertigen.ScrollSelectActivity" />
        <activity android:name="com.example.autocertigen.TemplateActivity" />
        <activity android:name="com.example.autocertigen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.autocertigen.MainActivity" />
    </application>

</manifest>